<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SEEKBAR背景底部的颜色 -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="@color/md_amber_700"
                android:endColor="@color/md_amber_A400"
                android:startColor="@color/md_amber_A400"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
    <!-- 拖动后的颜色 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#fffe7780"
                    android:endColor="#fffe7780"
                    android:startColor="#fffe7780"/>
                <corners android:radius="2dp"/>
            </shape>
        </clip>
    </item>
</layer-list>